{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "brace-style": ["error", "allman", { 
      "allowSingleLine": true 
    }],
    "@typescript-eslint/brace-style": "off"
  }
}
